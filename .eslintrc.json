{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "windows"],
        "no-restricted-syntax": "off",
        "no-plusplus": "off",
        "no-console": "off",
        "class-methods-use-this": "off",
        "prefer-destructuring": "off",
        "guard-for-in": "off",
        "max-len": "off"
    }
}