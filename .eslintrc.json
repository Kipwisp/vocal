{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": ["error", "unix"],
        "no-restricted-syntax": "off",
        "no-plusplus": "off",
        "no-console": "off",
        "class-methods-use-this": "off",
        "prefer-destructuring": "off",
        "guard-for-in": "off",
        "max-len": "off",
        "no-underscore-dangle": "off",
        "no-multi-str": "off",
        "indent": ["error", "tab"],
        "no-tabs": "off"
    }
}